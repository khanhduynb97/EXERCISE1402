<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0F14"
    android:weightSum="100">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="54">
                <ImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/poster"
                    android:scaleType="centerCrop" />

                <Button
                    android:id="@+id/btnPlay"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_play" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/poster_bottom_edge"
                    android:text="1h20m"
                    android:textSize="12sp"
                    android:textColor="#BCBDC5"
                    android:gravity="center_vertical|end"
                    android:paddingHorizontal="20dp"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45">

                <LinearLayout
                    android:id="@+id/llMovieDetail"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="25dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/button_rounded"
                                    android:text="18+"
                                    android:textColor="#D8D9DE"
                                    android:paddingVertical="5dp"
                                    android:paddingHorizontal="12dp"
                                    android:layout_marginEnd="10dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/button_rounded"
                                    android:text="Action"
                                    android:textColor="#D8D9DE"
                                    android:paddingVertical="5dp"
                                    android:paddingHorizontal="12dp"
                                    android:layout_marginEnd="10dp"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/button_rounded"
                                    android:paddingVertical="5dp"
                                    android:paddingHorizontal="12dp"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="center">
                                        <TextView
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:background="@drawable/icon_star_fg"
                                            android:layout_marginEnd="5dp"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="5.0"
                                            android:textColor="#D8D9DE"/>
                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/icon_add_bg"
                                    android:layout_marginEnd="20dp"/>

                                <TextView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@mipmap/icon_share_foreground"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="25dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Angel Has Fallen"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="#D8D9DE"
                                    android:layout_marginBottom="10dp"/>

                                <com.borjabravo.readmoretextview.ReadMoreTextView
                                    android:id="@+id/tvDesc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/description"
                                    android:textSize="14.5sp"
                                    android:textColor="#8a8b90"
                                    android:lineSpacingExtra="5sp"
                                    android:layout_marginBottom="10dp"
                                    app:trimExpandedText="@string/read_less"
                                    app:trimCollapsedText="@string/read_more"
                                    app:trimMode="trimModeLength"
                                    app:trimLength="210"
                                    app:colorClickableText="#550717"/>

                                <RelativeLayout
                                    android:id="@+id/rlHide"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">

                                        <TextView
                                            android:id="@+id/tvHide"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Hide"
                                            android:textColor="#D8D9DE"
                                            android:textSize="12sp"
                                            android:layout_alignParentEnd="true"/>
                                </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Actor"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:textColor="#D8D9DE"
                                    android:layout_marginBottom="10dp"
                                    android:paddingHorizontal="25dp"/>

                                <HorizontalScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="20dp">

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    app:cardCornerRadius="12dp"
                                                    android:layout_marginTop="15dp"
                                                    android:layout_marginEnd="20dp">

                                                        <ImageView
                                                            android:layout_width="70dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/gerardbutler"
                                                            android:background="@color/white"
                                                            android:scaleType="centerCrop" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    app:cardCornerRadius="12dp"
                                                    android:layout_marginTop="15dp"
                                                    android:layout_marginEnd="20dp">
                                                        <ImageView
                                                            android:layout_width="70dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/morgan"
                                                            android:background="@color/white"
                                                            android:scaleType="centerCrop" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    app:cardCornerRadius="12dp"
                                                    android:layout_marginTop="15dp"
                                                    android:layout_marginEnd="20dp">

                                                        <ImageView
                                                            android:layout_width="70dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/nicknolte"
                                                            android:background="@color/white"
                                                            android:scaleType="centerCrop" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    app:cardCornerRadius="12dp"
                                                    android:layout_marginTop="15dp"
                                                    android:layout_marginEnd="20dp">

                                                        <ImageView
                                                            android:layout_width="70dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/piperperabo"
                                                            android:background="@color/white"
                                                            android:scaleType="centerCrop" />
                                                </androidx.cardview.widget.CardView>

                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    app:cardCornerRadius="12dp"
                                                    android:layout_marginTop="15dp"
                                                    android:layout_marginEnd="20dp">

                                                        <ImageView
                                                            android:layout_width="70dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/lancereddick"
                                                            android:background="@color/white"
                                                            android:scaleType="centerCrop" />
                                                </androidx.cardview.widget.CardView>
                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    app:cardCornerRadius="12dp"
                                                    android:layout_marginTop="15dp"
                                                    android:layout_marginEnd="20dp">

                                                        <ImageView
                                                            android:layout_width="70dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/dannyhuston"
                                                            android:background="@color/white"
                                                            android:scaleType="centerCrop" />
                                                </androidx.cardview.widget.CardView>
                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    app:cardCornerRadius="12dp"
                                                    android:layout_marginTop="15dp"
                                                    android:layout_marginEnd="20dp">

                                                        <ImageView
                                                            android:layout_width="70dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/michaellandes"
                                                            android:background="@color/white"
                                                            android:scaleType="centerCrop" />
                                                </androidx.cardview.widget.CardView>
                                                <androidx.cardview.widget.CardView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    app:cardCornerRadius="12dp"
                                                    android:layout_marginTop="15dp"
                                                    android:layout_marginEnd="20dp">

                                                        <ImageView
                                                            android:layout_width="70dp"
                                                            android:layout_height="80dp"
                                                            android:src="@drawable/oripfeffer"
                                                            android:background="@color/white"
                                                            android:scaleType="centerCrop" />
                                                </androidx.cardview.widget.CardView>
                                        </LinearLayout>
                                </HorizontalScrollView>
                        </LinearLayout>
                </LinearLayout>
        </ScrollView>
</LinearLayout>